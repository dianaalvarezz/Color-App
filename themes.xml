<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ColorApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        app:layout_constraintVertical_bias="0.5"

        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="TextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:background">@color/lightPink</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="Label" parent="@android:style/TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Theme.ColorApp" parent="Base.Theme.ColorApp" />
</resources>
